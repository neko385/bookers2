<p id="notice">
<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>
</p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', book:@book_new, user:@book.user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <% if @user.profile_image.attached? %>
              <%= link_to image_tag @user.profile_image, size: "80x80" %>
            <% else %>
              <%= link_to image_tag 'no_image', size: "80x80" %>
            <% end %>
            <br>
            <%= link_to @user.name, user_path(@user) %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>