
<h1>new book</h1>
<%= form_with model: @book, url: '/books',method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit'Create Book' %>
  
<% end %>

<h1>Books</h1>
<% @books.each do |book| %>
<p><%= book.title %></p>
<p><%= book.body %></p>
<% end %>