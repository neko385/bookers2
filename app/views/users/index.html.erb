<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'user', book:@book, user:@user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% User.all.each do |user| %>
          <tr>
            <td>
            <% if @user.profile_image.attached? %>
              <%= link_to image_tag @user.profile_image, size: "80x80" %>
            <% else %>
              <%= link_to image_tag 'no_image', size: "80x80" %>
            <% end %>
            </td>
            <td><%= user.name %></td>
            <td><%= link_to "show", user %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

